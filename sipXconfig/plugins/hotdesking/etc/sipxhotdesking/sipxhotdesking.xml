<model>
  <type id="loglevel">
    <enum>
      <option>
        <value>DEBUG</value>
      </option>
      <option>
        <value>INFO</value>
      </option>
      <option>
        <value>NOTICE</value>
      </option>
      <option>
        <value>WARNING</value>
      </option>
      <option>
        <value>ERR</value>
      </option>
      <option>
        <value>CRIT</value>
      </option>
      <option>
        <value>ALERT</value>
      </option>
      <option>
        <value>EMERG</value>
      </option>
    </enum>
  </type>
  <type id="feature-code">
    <string>
      <pattern>[0-9*#]+</pattern>
    </string>
  </type>
  <type id="logoff-user">
    <string>
      <pattern>.+</pattern>
    </string>
  </type>
  <type id="allowed-numbers">
    <string>
      <pattern>[0-9*# ]+</pattern>
    </string>
  </type>
  <type id="time">
    <string>
      <pattern>([01]?[0-9]|2[0-3]):[0-5][0-9]</pattern>
    </string>
  </type>
  
  <type id="enable_relogging">
    <boolean>
      <true>
        <value>true</value>
      </true>
      <false>
        <value>false</value>
      </false>
    </boolean>
  </type>
  <type id="enable_prompt_logoff_other_phones">
    <boolean>
      <true>
        <value>true</value>
      </true>
      <false>
        <value>false</value>
      </false>
    </boolean>
  </type>
  <type id="enable_auto_logoff_other_phones">
    <boolean>
      <true>
        <value>true</value>
      </true>
      <false>
        <value>false</value>
      </false>
    </boolean>
  </type>
  <type id="enable_confirmation">
    <boolean>
      <true>
        <value>true</value>
      </true>
      <false>
        <value>false</value>
      </false>
    </boolean>
  </type>
  <type id="enable_welcome_message">
    <boolean>
      <true>
        <value>true</value>
      </true>
      <false>
        <value>false</value>
      </false>
    </boolean>
  </type>
  <type id="enable_skip_pincode">
    <boolean>
      <true>
        <value>true</value>
      </true>
      <false>
        <value>false</value>
      </false>
    </boolean>
  </type>
  <type id="default_pincode_if_skipping_pincode_validation">
    <string>
      <pattern>.+</pattern>
    </string>
  </type>
  <type id="port-number">
    <integer required="yes" min="1024" max="65534"/>
  </type>
  <group name="hotdesking">
    <!-- general config -->
    <setting name="SIP_HOTDESKING_PREFIX">
      <type refid="feature-code" required="yes"/>
      <value>*11</value>
    </setting>
    <setting name="LOGOFF_USER" hidden="yes">
      <type refid="logoff-user" required="yes"/>
      <value>~~in~HD</value>
    </setting>
    <!--  behaviour related -->
    <setting name="ENABLE_SKIP_WELCOME">
      <type refid="enable_welcome_message" required="yes"/>
      <value>true</value>
    </setting>
    <setting name="ENABLE_SKIP_PINCODE" advanced="yes">
      <type refid="enable_skip_pincode"/>
      <value>false</value>
    </setting>
    <setting name="DEFAULT_PINCODE" advanced="yes">
      <type refid="default_pincode_if_skipping_pincode_validation"/>
      <value>1234</value>
    </setting>
    <setting name="ENABLE_RELOGGING">
      <type refid="enable_relogging" required="yes"/>
      <value>false</value>
    </setting>
    <setting name="ENABLE_PROMPT_LOGOFF_OTHER_PHONES">
      <type refid="enable_prompt_logoff_other_phones" required="yes"/>
      <value>false</value>
    </setting>
    <setting name="ENABLE_AUTO_LOGOFF_OTHER_PHONES">
      <type refid="enable_auto_logoff_other_phones" required="yes"/>
      <value>true</value>
    </setting>
    <setting name="ENABLE_CONFIRMATION">
      <type refid="enable_confirmation" required="yes"/>
      <value>false</value>
    </setting>
    
    <!-- Hotdesking plugin related -->
    <setting name="SIP_HOTDESKING_ALLOWED">
      <type refid="allowed-numbers" required="no" />
      <value>112</value>
    </setting>
    <setting name="AUTO_LOGOFF_TIME">
      <type refid="time" required="yes" />
      <value>00:00</value>
    </setting>
    
    <!-- hidden fields -->
    <setting name="freeswitch.eventSocketPort" hidden="yes">
      <type refid="port-number"/>
      <value>8284</value>
    </setting>
    <setting name="log.level" hidden="yes">
      <type refid="loglevel"/>
      <value>NOTICE</value>
    </setting>
  </group>
</model>
